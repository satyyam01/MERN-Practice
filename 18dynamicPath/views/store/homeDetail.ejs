<%- include('../partials/head') %>
</head>

<body class="bg-gray-100 text-gray-900">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-10 p-4">
    <div class="bg-white shadow-lg rounded-2xl overflow-hidden max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
      
      <!-- Image Section -->
      <div class="flex justify-center items-center p-6 bg-gray-50">
        <img src="<%= home.homeImage %>" alt="<%= home.homeName %>" class="rounded-xl shadow-md max-w-full h-auto object-cover" />
      </div>

      <!-- Details Section -->
<div class="p-6 flex flex-col justify-center relative">
  <div class="flex justify-between items-start">
    <h1 class="text-4xl font-extrabold text-red-600 mb-4"><%= home.homeName %></h1>
    
    <!-- Favorite Button -->
    <div class="ml-4 mt-1">
      <%- include("../partials/favForm", { home: home }) %>
    </div>
  </div>

  <p class="text-lg text-gray-700 mb-2">
    <span class="font-semibold text-gray-800">Price:</span> ₹<%= home.homePrice %>
  </p>

  <p class="text-lg text-gray-700 mb-2">
    <span class="font-semibold text-gray-800">Location:</span> <%= home.homeLocation %>
  </p>

  <% if (home.homeRating) { %>
    <p class="text-lg text-yellow-600 mb-2 flex items-center gap-1">
      <span class="font-semibold text-gray-800">Rating:</span>
      <%= home.homeRating %> ⭐
    </p>
  <% } %>

  <% if (home.homeDesc) { %>
    <p class="text-base text-gray-600 mt-4">
      <span class="block font-semibold text-gray-800 mb-1">Description:</span>
      <%= home.homeDesc %>
    </p>
  <% } %>

  <a href="/store/homeList" class="inline-block mt-6 text-sm text-white bg-red-500 hover:bg-red-600 font-medium py-2 px-4 rounded-xl transition">
    ← Back to Listings
  </a>
</div>

    </div>
  </main>
</body>
</html>
