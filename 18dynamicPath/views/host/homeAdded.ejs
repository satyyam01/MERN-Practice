<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-4">
      <div class="bg-white shadow-md rounded-lg p-6 text-center">
        <h1 class="text-3xl font-bold text-red-500 mb-4">Home Registered Successfully</h1>
        <p class="text-lg text-gray-600 mb-6">Your home has been added to our listings.</p>

        <!-- Home Card -->
        <div class="max-w-md mx-auto bg-gray-100 shadow-md rounded-lg overflow-hidden">
          <% if (home.homeImage) { %>
            <img src="<%= home.homeImage %>" alt="Home Image" class="w-full h-64 object-cover">
          <% } %>
          <div class="p-6 text-left">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= home.homeName %></h2>
            <p class="text-gray-600 mb-1">
              <span class="font-medium">Location:</span> <%= home.homeLocation %>
            </p>
            <p class="text-gray-600 mb-1">
              <span class="font-medium">Price per Night:</span> â‚¹<%= home.homePrice %>
            </p>
            <p class="text-gray-600 mb-1">
              <span class="font-medium">Description:</span> <%= home.homeDesc %>
            </p>
            <p class="text-gray-600 mb-1">
              <span class="font-medium">Rating:</span> <%= home.homeRating %>
            </p>
          </div>
        </div>

        <!-- Back to home -->
        <a
          href="/"
          class="inline-block mt-6 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-400 transition duration-300"
        >
          Return to Home
        </a>
      </div>
    </main>
  </body>
</html>
