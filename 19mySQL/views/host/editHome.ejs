<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"><%= editing ? "Edit Your Home" : "Register Your Home on AirBnB "%> </h1>
      <form action="/host/<%= editing ? 'editHome' : 'addHome' %>" method="POST" class="max-w-md mx-auto">

        <input type="hidden" name="id" value="<%= editing ? home.id : '' %>" />  <!-- sending id as a hiden field from the form -->

        <input
          type="text"
          name="homeName"
          value="<%= editing ? home.homeName : '' %>"
          placeholder="Enter your House Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="homePrice"
          value="<%= editing ? home.homePrice : '' %>"
          placeholder="Enter your House's Price per Night"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="homeLocation"
          value="<%= editing ? home.homeLocation : '' %>"
          placeholder="Enter your House's Location"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input type="text"
          name="homeImage"
          value="<%= editing ? home.homeImage : '' %>"
          placeholder="Enter your House's Image URL"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input type="text"
          name="homeRating"
          value="<%= editing ? home.homeRating : '' %>"
          placeholder="Enter your House's Rating"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <textarea
          name="homeDesc"
          placeholder="Enter your House's Description"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= editing ? home.homeDesc : '' %></textarea>
        <input type="submit" value="<%= editing ? 'Update' : 'Submit' %>" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
    </main>
  </body>
</html>
